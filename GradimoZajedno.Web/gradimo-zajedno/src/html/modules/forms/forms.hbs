<div class="forms">
	<div class="wrap">
		<div class="forms__content">
			{{#each col}}
			<div class="forms__col">
				{{#if title}}
				<h2 class="h1 forms__title">{{title}}</h2>
				{{/if}}
				{{#if form}}
				<form class="form js-form" action="/contact" data-name="{{data-name}}">
					{{#each input}}
					<div class="form__input-wrap{{#if full}} form__input-wrap--full{{/if}}">
						{{#if textarea}}
						<label for="{{name}}" class="label">{{label}}</label>
						<textarea class="input js-input" name="{{name}}" id="{{name}}" cols="30" rows="5"{{#if required}} required{{/if}}></textarea>
						{{else}}
						<div class="input-wrap">
							<label for="{{name}}" class="label">{{label}}</label>
							<span class="error-msg"></span>
							<input class="input js-input" type="{{type}}" name="{{name}}" {{#if required}} required{{/if}} id="{{name}}" autocomplete="off">
						</div>
						{{/if}}
					</div>
					{{/each}}
					<div class="form__btn-wrap">
						<button class="btn form__btn" type="submit">{{submit}}</button>
						{{#if exit}}
						<button class="btn btn--outline form__btn js-close-popup" type="button">{{exit}}</button>
						{{/if}}
					</div>
				</form>
				{{/if}}
			</div>
			{{/each}}
		</div>
	</div>
</div>
