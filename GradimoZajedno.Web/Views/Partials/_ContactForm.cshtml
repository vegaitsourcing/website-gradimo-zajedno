@inherits UmbracoViewPage<GradimoZajedno.Core.ViewModels.Pages.PageViewModel>

<div class="forms">
    <div class="wrap">
        <div class="forms__content">
            <div class="forms__col">
                <h2 class="h1 forms__title">@Umbraco.GetDictionaryValue("Form.Contact.Title")</h2>
                <form class="form js-form" action="/contact" data-name="contact">
                    <div class="form__input-wrap">
                        <div class="input-wrap">
                            <label for="name" class="label">@Umbraco.GetDictionaryValue("Form.Contact.Name"):</label>
                            <span class="error-msg"></span>
                            <input class="input js-input" type="text" name="name" required id="name" autocomplete="off">
                            <span class="form__error-msg js-error-msg"></span>
                        </div>
                    </div>
                    <div class="form__input-wrap">
                        <div class="input-wrap">
                            <label for="lastName" class="label">@Umbraco.GetDictionaryValue("Form.Contact.Surname"):</label>
                            <span class="error-msg"></span>
                            <input class="input js-input" type="text" name="lastName" required id="lastName" autocomplete="off">
                            <span class="form__error-msg js-error-msg"></span>
                        </div>
                    </div>
                    <div class="form__input-wrap form__input-wrap--full">
                        <div class="input-wrap">
                            <label for="email" class="label">@Umbraco.GetDictionaryValue("Form.Contact.Email"):</label>
                            <span class="error-msg"></span>
                            <input class="input js-input" type="email" name="email" required id="email" autocomplete="off">
                            <span class="form__error-msg js-error-msg"></span>
                        </div>
                    </div>
                    <div class="form__input-wrap form__input-wrap--full">
                        <div class="input-wrap">
                            <label for="telephone" class="label">@Umbraco.GetDictionaryValue("Form.Contact.Phone"):</label>
                            <span class="error-msg"></span>
                            <input class="input js-input" type="tel" name="telephone" id="telephone" autocomplete="off">
                            <span class="form__error-msg js-error-msg"></span>
                        </div>
                    </div>
                    <div class="form__input-wrap form__input-wrap--full">
                        <label for="message" class="label">@Umbraco.GetDictionaryValue("Form.Contact.Message"):</label>
                        <textarea class="input js-input" name="message" id="message" cols="30" rows="5" required></textarea>
                        <span class="form__error-msg"></span>
                    </div>
                    <div class="form__btn-wrap">
                        <button class="btn form__btn js-submit" type="submit">@Umbraco.GetDictionaryValue("Form.Contact.Action")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
