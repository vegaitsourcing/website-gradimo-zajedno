@inherits UmbracoViewPage<GradimoZajedno.Core.ViewModels.Partials.Layout.HeaderViewModel>
@using Microsoft.AspNetCore.Http.Extensions; 

@{
	var navigation = @Model.NavigationMenu;
}
<header class="header">
		<div class="wrap">
			<div class="header__container">
				<a href="@Model.LogoUrl" class="header__home">
					<img src="@Model.Logo.Url" alt="Logo" class="header__logo">
				</a>
				<nav class="nav js-nav">
					<button class="nav__btn js-menu" type="button">
						<span class="nav__btn-icon"></span>
						<span class="sr-only">menu icon</span>
					</button>
					<ul class="nav__list" role="menubar">
						@if(navigation != null && navigation.Any())
						{
							foreach(var item in navigation)
							{
								<li class="nav__item" role="menuitem">
									@{
										var activeClass = "";
										if(item.Url.Equals(Context.Request.Path))
										{
											activeClass = "link--active";
										}
										<a href="@item.Url" target="@item.Target" class="link @activeClass nav__link">@item.Content</a> 
									}
								</li>
							}
						}
					</ul>
				</nav>
				<div class="lang-toggle">
					<label class="lang-toggle__label" for="">
						<input class="lang-toggle__input js-lang-toggle" data-checked=false type="checkbox">
						<span class="lang-toggle__slider">
							<span class="lang lang--srb">SRB</span>
							<span class="lang lang--en">ENG</span>
						</span>
					</label>
				</div>
			</div>
		</div>
	</header>
