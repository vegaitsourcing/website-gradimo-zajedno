@inherits UmbracoViewPage<GradimoZajedno.Core.ViewModels.Pages.HomeViewModel>
@using GradimoZajedno.Common.Extensions;

<div class="cards__content swiper-wrapper">
@{
    int i = 0;
    var currentSettlement = Model.Home.City.Value("CurrentSettlement") as IPublishedContent;
    foreach (var item in currentSettlement.Children)
    {
        <div class="card js-card swiper-slide card-@i" data-id="@i">
            <div class="card__info">
                <h2 class="card__title">@item.Value("title")</h2>
                <p class="card__text">@Html.Raw(((string)item.Value("description")).ReplaceNewLinesWithLineBreaks())</p>
            </div>
        </div>
        i++;
    }
}
</div>
