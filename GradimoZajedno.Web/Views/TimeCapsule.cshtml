@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits UmbracoViewPage<GradimoZajedno.Core.ViewModels.Pages.TimeCapsuleViewModel>
@using ContentModels = GradimoZajedno.Models.Generated;



	<div class="banner wrap wrap--xl js-popup-parent banner--bottom">
		<div class="banner__bg has-cover" style="background-image: url(@Model.TimeCapsulePicture.Url);"></div>
		<div class="wrap">
			<div class="banner__holder">
				<div class="banner__content">
				</div>
			</div>
		</div>
	</div>
	<div class="stories js-popup-parent">
		<div class="wrap">
			<div class="stories__header">
				<h1 class="h1 stories__title">@Model.TimeCapsuleTitle</h1>
				<p class="text stories__text">@Model.TimeCapsuleText</p>
				<button type="button" class="btn stories__btn js-popup-btn">@Umbraco.GetDictionaryValue("Timeline.Button")</button>
			</div>
			<div class="stories__body js-stories-container"></div>

			@await Html.PartialAsync("_TimeCapsuleForm")
		</div>
	</div>
