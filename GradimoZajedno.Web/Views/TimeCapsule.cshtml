												<div class="input-wrap">
													<label for="email" class="label">Email:</label>
													<span class="error-msg"></span>
													<input class="input js-input" type="email" name="email" required="" id="email" autocomplete="off">
												</div>
											</div>
											<div class="form__input-wrap form__input-wrap--full">
												<label for="message" class="label">Priča:</label>
												<textarea class="input js-input" name="message" id="message" cols="30" rows="5" required=""></textarea>
											</div>
											<div class="form__btn-wrap">
												<button class="btn form__btn" type="submit">Pošalji</button>
												<button class="btn btn--outline form__btn js-close-popup" type="button">Odustani</button>
											</div>
										</form>
